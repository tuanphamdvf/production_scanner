<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="production_scanner.ChartTemplate" owl="1">
        <div viewType="'barcode_view'" class="d-flex">
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"/>
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
                  integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw=="
                  crossorigin="anonymous" referrerpolicy="no-referrer"/>

            <div class=" container-custom ">
                <div t-on-click="sendMessage('add')">
                    <div class=" backgrounds-vinhgia shadow-custom border-customer">
                        <i style="font-size: 40px;" class="fas fa-plus-square mr-4"></i>
                        <h1> Create Production</h1>

                    </div>
                </div>
                <div t-on-click="hanldeProduction()">
                    <div class=" bg-yellow-100 shadow-custom border-customer">
                        <i style="font-size: 40px;" class="fas fa-tools mr-4"></i>
                        <h1> Check Production</h1>

                    </div>
                </div>
                <div t-on-click="hanldeProduction()">
                    <div class=" bg-green-500 shadow-custom border-customer">
                        <i style="font-size: 40px;" class="fas fa-save mr-4"></i>
                        <h1> Finish Production</h1>

                    </div>
                </div>
                <div t-on-click="addProduction()" class="hover">
                    <div class=" bg-red-100 shadow-custom border-customer">
                        <i style="font-size: 40px;" class="fas fa-trash-alt mr-4"></i>
                        <h1> Cancel Production</h1>
                    </div>
                </div>


                <!-- <div class=" bg-yellow-100 mt-2">
                    2 of 2
                </div>
                <div class=" bg-green-100 mt-2">
                    2 of 2
                </div>
                <div class=" bg-blue-500 mt-2">
                    2 of 2
                </div> -->

            </div>


        </div>

    </t>

</templates>